<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/home_item_horizontal_margin"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_card_heigth"
        android:layout_marginTop="@dimen/banner_card_margin_top"
        android:padding="@dimen/banner_card_padding"
        app:cardCornerRadius="@dimen/banner_card_radius"
        android:background="@drawable/transparant"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hb_banner"
            android:scaleType="fitCenter"
            android:contentDescription="@string/todo">

        </ImageView>
    </androidx.cardview.widget.CardView>



</LinearLayout>